@page
@model SDSCom.Pages.Administrator.UserListModel
@{
    ViewData["Title"] = "User List";
}

@Html.Partial("./HeaderPartial")

<form method="post">

    <input type="submit" class="btn-primary" id="saveEntity" value="Add New" asp-page-handler="AddNew" />

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Active</th>
                <th>Create Date</th>
                <th>Update Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Active</td>
                    <td>@user.CreateDate</td>
                    <td>@user.UpdateDate</td>
                    <td>
                        <button type="submit" asp-page-handler="edituser" asp-route-id="@user.Id" />                       Edit
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

