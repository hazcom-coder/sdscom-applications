@page
@model SDSCom.Pages.Author.ComponentListModel
@{
    ViewData["Title"] = "Component List";
}

<h2>Component List</h2>


<form method="post">
    <div id="divTable">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Other Id</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model.EntityList)
                {
                    <tr>
                        <td>@entity.ID</td>
                        <td>@entity.EntityName</td>
                        <td>@entity.OtherId</td>
                        <td>@entity.DateStamp</td>
                        <td>
                            <button type="submit" asp-page-handler="editsetting" asp-route-id="@entity.ID" />Edit
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="divButtons">
        <button type="submit" class="btn-default" asp-page-handler="createEntity">Create Component</button>
    </div>
</form>



