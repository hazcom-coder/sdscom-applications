@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .center-div 
    {
        width: 500px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<form method="post">
    <div class="center-div">
        <div class="row">
            <h3>Login to the SDSCom Application</h3>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <label>User Name:</label>
                <input type="text" value="First1" class="form-control small" id="txtUserName" asp-for="@Model.LoginUser.UserName" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-6">
                <label>Password:</label>
                <input type="password" value="abc" class="form-control small" id="txtPassword"asp-for="@Model.LoginUser.Password" />
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-xs-6">
                <input class="btn-primary" type="submit" asp-page-handler="AppLogin" value="Login" />
            </div>
        </div>
    </div>
</form>
